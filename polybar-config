[colors]
background = #121212
background-alt = #111111
foreground = #eeeeee
foreground-alt = #ffffff
primary = #d7ffaf
secondary = #afffff
alert = #ff8787

[global/wm]
margin-top = 5
margin-bottom = 100

[bar/bar1]
width = 100%
height = 21
offset-x = 15
offset-y = 0

background = ${colors.background}
foreground = ${colors.foreground}

spacing = 1
padding-left = 0
padding-right = 2
padding-top  = 15
padding-bottom = 10
module-margin-left = 1
module-margin-right = 2

font-0 = "Inconsolata:style=Regular:size=12;0"
font-1 = "Everson Mono:style=Regular:size=12;0"

modules-left = i3
modules-center = date
modules-right = memory cpu wlan battery temperature

tray-position = right
tray-padding = 2
wm-restack = i3

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%
label-font = 0

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

label-mode-padding = 2
label-mode-foreground = #000
label-mode-background = ${colors.primary}

label-focused = ●
label-focused-background = ${colors.background-alt}
label-focused-padding = 2

label-unfocused = ○
label-unfocused-padding = 2

label-urgent = ◐
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

label-visible = ◉
label-visible-background = ${self.label-focused-background}
label-visible-padding = ${self.label-focused-padding}

[module/cpu]
type = internal/cpu
interval = 2
format-prefix-foreground = ${colors.foreground-alt}
format-underline = #f90000
label =	CPU %percentage%%

[module/memory]
type = internal/memory
interval = 2
format-prefix-foreground = ${colors.foreground-alt}
format-underline = #4bffdc
label-active-font = 1
label = MEM %percentage_used%%

[module/wlan]
type = internal/network
interface = wlp12s0
interval = 3.0

format-connected = <label-connected>
format-connected-underline = #9f78e1
format-disconnected-underline = ${self.format-connected-underline}

label-connected = WIFI %essid%
label-disconnected =
label-disconnected-foreground = ${colors.foreground-alt}

ramp-signal-0 = 1
ramp-signal-1 = 2
ramp-signal-2 = 3
ramp-signal-3 = 4
ramp-signal-4 = 5
ramp-signal-foreground = ${colors.foreground-alt}

[module/eth]
type = internal/network
interface = enp9s0
interval = 3.0

format-connected-underline = #55aa55
format-connected-prefix = ""
format-connected-foreground-foreground = ${colors.foreground-alt}
label-connected = %local_ip%

format-disconnected-underline = ${self.format-connected-underline}
label-disconnected = %ifname% disconnected
label-disconnected-foreground = ${colors.foreground-alt}

[module/date]
type = internal/date
interval = 5

date = %Y-%m-%d
date-alt = " %Y-%m-%d"

time = %H:%M
time-alt = %H:%M:%S

format-prefix =
format-prefix-foreground = ${colors.foreground-alt}
format-underline = #0a6cf5

label = %date% %time%

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 98

format-charging = BAT <animation-charging><label-charging>
format-charging-underline = #ffb52a

format-discharging = BAT <ramp-capacity><label-discharging>
format-discharging-underline = ${self.format-charging-underline}

format-full-prefix = BAT █
format-full-prefix-foreground = ${colors.foreground-alt}
format-full-underline = ${self.format-charging-underline}

ramp-capacity-0 =
ramp-capacity-1 = ▁
ramp-capacity-2 = ▂
ramp-capacity-3 = ▃
ramp-capacity-4 = ▅
ramp-capacity-5 = ▆
ramp-capacity-6 = █
ramp-capacity-foreground = ${colors.foreground-alt}

animation-charging-0 = ▁
animation-charging-1 = ▂
animation-charging-2 = ▃
animation-charging-3 = ▅
animation-charging-4 = ▆
animation-charging-5 = █
animation-charging-foreground = ${colors.foreground-alt}
animation-charging-framerate = 750

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60

label-active-font = 1
format = <label>
format-underline = #f50a4d
format-warn = <label-warn>
format-warn-underline = ${self.format-underline}

label = TEMP %temperature%
label-warn = %temperature%
label-warn-foreground = ${colors.secondary}

