bindsym $mod+d exec rofi -show run -font "Noto Sans 14" -lines 3 -eh 2 -width 100 -padding 344 -opacity "95"
# startup
exec_always xrdb -load ~/.Xresources
exec_always nitrogen --restore
exec_always compton --blur-background-frame --blur-kern 11x11gaussian

